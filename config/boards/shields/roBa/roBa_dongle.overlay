/*
 * roBa_dongle.overlay
 * ドングル用の設定ファイル
 */
#include <dt-bindings/zmk/keys.h>

/* ドングルに接続されたトラックボールの定義 */
&spi0 {
    status = "okay";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>; /* 注意: ドングル基板での実際のCSピン配線に合わせる */

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; /* 注意: ドングル基板での実際のIRQピン配線に合わせる */
        
        /* レイヤーに応じた操作など、トラックボールの機能設定 */
        scroll-layers = <5>;
        arrows {
            layers = <3>;
            bindings =
                <&kp RIGHT_ARROW>,
                <&kp LEFT_ARROW>,
                <&kp UP_ARROW>,
                <&kp DOWN_ARROW>;
        };
    };
};

/* トラックボールの入力を監視するリスナー */
/ {
    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;
    };
};

/* ピン設定（pinctrl）やシリアル無効化（xiao_serial）も必要に応じて記述 */
&pinctrl {
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
        };
    };
    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 5)>,
                    <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                    <NRF_PSEL(SPIM_MISO, 0, 4)>;
            low-power-enable;
        };
    };
};

&xiao_serial { status = "disabled"; };
