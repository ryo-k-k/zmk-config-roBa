/*
 * roBa Dongle Overlay (Final Corrected Version)
 */

&default_transform {
    col-offset = <6>;
};

/ {
    chosen {
        zmk,kscan = &mock_kscan;
    };

    // 必須プロパティである rows, columns, events をすべて含んだ
    // 完全なダミーのkscanを定義します。
    mock_kscan: mock_kscan {
        compatible = "zmk,kscan-mock";
        rows = <0>;
        columns = <0>;
        // ★★★ この行を追加 ★★★
        events = <>; // ダミーであっても events プロパティは必須
    };
};
