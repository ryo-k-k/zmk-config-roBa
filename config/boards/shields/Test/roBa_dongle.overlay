// roBa_dongle.overlay

/ {
    chosen {
        // zmk,kscan プロパティにダミーの kscan デバイスを指定します。
        // これにより、ZMKはキーボードマトリックスが存在すると認識します。
        zmk,kscan = &kscan0;
    };

    // ダミーのキースキャンデバイスを定義します。
    // drive-gpios や input-gpios は空で問題ありません。
    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row"; // "row2col" でも可

        // ここにGPIOの定義は不要です
        // row-gpios = <>;
        // col-gpios = <>;
    };

    // ダミーのマトリックストランスフォームを定義します。
    // これにより、キーマップのサイズが決定されます。
    // keymapノードの `map` プロパティも空で問題ありません。
    matrix_transform: matrix_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <1>;

        map = <
        >;
    };
};
