#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <11>;
        rows = ;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)           RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)   RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)   RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)   RC(3,7) RC(3,8) RC(3,9) RC(3,10)
        >;
    };

    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        // TODO: ご自身のキーボードの配線に合わせて、正しいピン番号に書き換えてください。
        row-gpios
            = <&gpio0 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
              <&gpio0 1  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
              <&gpio0 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
              <&gpio0 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

        // TODO: ご自身のキーボードの配線に合わせて、正しいピン番号に書き換えてください。
        col-gpios
            = <&gpio0 2>,
              <&gpio0 3>,
              <&gpio0 4>,
              <&gpio0 5>,
              <&gpio0 6>,
              <&gpio0 7>,
              <&gpio0 28>,
              <&gpio0 29>,
              <&gpio0 30>,
              <&gpio0 31>,
              <&gpio0 21>
            ;
    };

    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps-per-period = ;
        status = "disabled";
    };

    right_encoder: encoder_right {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // 仮のピン
        b-gpios = <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>; // 仮のピン
        steps-per-period = ;
        status = "disabled";
    };
};

// &spi0 は seeeduino_xiao_ble.dts で定義済みです
&spi0 {
    status = "okay";

    trackball: trackball@0 {
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        // ★★★ この行が右手側のエラーを解決します ★★★
        // TODO: トラックボールのCSピンが接続されているピン番号(ここでは仮に17)に修正してください。
        cs-gpios = <&gpio0 17 (GPIO_ACTIVE_LOW)>;
    };
};
