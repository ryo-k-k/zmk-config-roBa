# Kconfig.shield

if SHIELD_ROBA_L

config ZMK_KEYBOARD_NAME
    default "roBa_L"

config ZMK_SPLIT
    default y

# Left half is peripheral, no need to define role explicitly here
endif

if SHIELD_ROBA_R

config ZMK_KEYBOARD_NAME
    default "roBa_R"

config ZMK_SPLIT
    default y

# Right half is peripheral, do not set ROLE_CENTRAL here
endif

if SHIELD_ROBA_DONGLE

# Max 16 characters in keyboard name
config ZMK_KEYBOARD_NAME
    default "roBa_Dongle"

config ZMK_SPLIT
    default y

# Dongle acts as central controller
config ZMK_SPLIT_ROLE_CENTRAL
    default y

# Set to 2 to support both left and right peripherals
config ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS
    default 2

# Number of total Bluetooth connections = peripherals + host connections (e.g. PC/phone)
config BT_MAX_CONN
    default 6

# Number of paired devices, same as above
config BT_MAX_PAIRED
    default 6

endif

